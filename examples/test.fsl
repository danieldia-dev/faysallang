// Faysal Lang - Comprehensive Examples

// ============================================
// EXAMPLE 1: Arithmetic Operations
// ============================================
3mol highkey "=== Arithmetic Demo ==="

hayde a hiyye 10
hayde b hiyye 5

3mol highkey "Addition:"
hayde sum hiyye a + b
3mol highkey sum

3mol highkey "Subtraction:"
hayde diff hiyye a - b
3mol highkey diff

3mol highkey "Multiplication:"
hayde product hiyye a * b
3mol highkey product

3mol highkey "Division:"
hayde quotient hiyye a / b
3mol highkey quotient

3mol highkey "Modulo:"
hayde remainder hiyye a % 3
3mol highkey remainder

// ============================================
// EXAMPLE 2: Comparisons and Logic
// ============================================
3mol highkey "\n=== Comparison Demo ==="

hayde x hiyye 15
hayde y hiyye 20

eza betshil x < y lakan
   3mol highkey "x is less than y - ong no cap!"
deal

eza betshil x == 15 lakan
   3mol highkey "x equals 15 - facts!"
deal

eza betshil x > y lakan
   3mol highkey "This won't print"
walla
   3mol highkey "x is not greater than y"
deal

// ============================================
// EXAMPLE 3: While Loops (Counting)
// ============================================
3mol highkey "\n=== While Loop Demo ==="

hayde counter hiyye 1
khalas betshil counter <= 5 lakan
   3mol highkey counter
   counter hiyye counter + 1
deal

// ============================================
// EXAMPLE 4: Factorial Calculator
// ============================================
3mol highkey "\n=== Factorial Demo ==="

hayde n hiyye 5
hayde factorial hiyye 1
hayde i hiyye 1

khalas betshil i <= n lakan
   factorial hiyye factorial * i
   i hiyye i + 1
deal

3mol highkey "Factorial of 5 is:"
3mol highkey factorial

// ============================================
// EXAMPLE 5: FizzBuzz
// ============================================
3mol highkey "\n=== FizzBuzz Demo ==="

hayde num hiyye 1
khalas betshil num <= 20 lakan
   hayde by_three hiyye num % 3
   hayde by_five hiyye num % 5
   
   eza betshil by_three == 0 && by_five == 0 lakan
      3mol highkey "FizzBuzz"
   walla
      eza betshil by_three == 0 lakan
         3mol highkey "Fizz"
      walla
         eza betshil by_five == 0 lakan
            3mol highkey "Buzz"
         walla
            3mol highkey num
         deal
      deal
   deal
   
   num hiyye num + 1
deal

// ============================================
// EXAMPLE 6: Break and Continue
// ============================================
3mol highkey "\n=== Break/Continue Demo ==="

hayde j hiyye 0
khalas betshil j < 10 lakan
   j hiyye j + 1
   
   // Skip even numbers
   hayde is_even hiyye j % 2 == 0
   eza betshil is_even lakan
      yalla
   deal
   
   // Break at 7
   eza betshil j > 7 lakan
      waqif
   deal
   
   3mol highkey j
deal

