// ============================================
// EXAMPLE 8: Boolean Logic
// ============================================
3mol highkey "\n=== Boolean Logic Demo ==="

hayde is_cool hiyye ong_no_cap
hayde is_valid hiyye ong_no_cap
hayde is_broken hiyye cap

eza betshil is_cool && is_valid lakan
   3mol highkey "Both conditions are true!"
deal

eza betshil is_cool || is_broken lakan
   3mol highkey "At least one is true!"
deal

eza betshil !is_broken lakan
   3mol highkey "Not broken - we good!"
deal

// ============================================
// EXAMPLE 9: Nested Conditionals
// ============================================
3mol highkey "\n=== Nested Conditionals Demo ==="

hayde score hiyye 85

eza betshil score >= 90 lakan
   3mol highkey "Grade: A - Highkey crushing it!"
walla
   eza betshil score >= 80 lakan
      3mol highkey "Grade: B - Pretty solid fr"
   walla
      eza betshil score >= 70 lakan
         3mol highkey "Grade: C - Mid but passing"
      walla
         3mol highkey "Grade: F - That's cap, try again"
      deal
   deal
deal

// ============================================
// EXAMPLE 10: Prime Number Check
// ============================================
3mol highkey "\n=== Prime Number Check ==="

hayde check_num hiyye 17
hayde is_prime hiyye ong_no_cap
hayde divisor hiyye 2

khalas betshil divisor * divisor <= check_num lakan
   hayde remainder hiyye check_num % divisor
   eza betshil remainder == 0 lakan
      is_prime hiyye cap
      waqif
   deal
   divisor hiyye divisor + 1
deal

eza betshil is_prime lakan
   3mol highkey "17 is prime - ong no cap!"
walla
   3mol highkey "17 is not prime - that's cap"
deal